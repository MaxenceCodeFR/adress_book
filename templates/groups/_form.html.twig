<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Créer un groupe</h1>

            {{ form_start(groupForm, {'attr': {'class': 'mt-4'}}) }}
            <div class="form-group">
                {{ form_row(groupForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du groupe'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(groupForm.contact, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez des contacts'}}) }}
            </div>

            <button type="submit" class="btn btn-primary">Créer le groupe</button>

            {{ form_end(groupForm) }}
        </div>
    </div>
</div>
