{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Register</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}
                    <div class="mb-3">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Pr√©nom'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Nom de famille'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control', 'placeholder': 'Mot de Passe'}}) }}
                    </div>
                    <div class="form-check mb-3">
                        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
